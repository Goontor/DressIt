<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	    <LinearLayout
	        android:id="@+id/profilHead"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        <LinearLayout
	        android:id="@+id/profilHead"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
		        <ImageView
		            android:id="@+id/profilPic"
		            android:layout_width="100dip"
		            android:layout_height="100dip"
		            android:scaleType="centerCrop"
		            android:contentDescription="profilPic"
		             />
		        <TextView
		            android:id="@+id/profilPseudo"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		             />
		    </LinearLayout>
	        <TextView
	            android:id="@+id/profilLastName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	             />
	        <TextView
	            android:id="@+id/profilfirstName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	             />
	        <TextView
	            android:id="@+id/profilPhone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	             />
	        <TextView
	            android:id="@+id/profilsexe"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	             />
	            
	    
		    <Button
		        android:id="@+id/profilEditButton" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Edit Profile"/>
	    
    </LinearLayout>
</ScrollView>
