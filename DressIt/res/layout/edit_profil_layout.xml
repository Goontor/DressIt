<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <LinearLayout
	        android:id="@+id/profilHead"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <LinearLayout
	        android:id="@+id/profilHead"
	        android:layout_width="120dip"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
		        <ImageButton
		            android:id="@+id/start_file_picker_button"
		            android:layout_width="100dip"
		            android:layout_height="100dip"
		            android:scaleType="centerCrop"
		            android:contentDescription="profilPic"
		             />
		        <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Selected file"
		        android:textStyle="bold"
		        android:textColor="#fff"
		        android:textSize="24sp" />
			    <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:id="@+id/file_path_text_view"
			        android:text="No file has been selected"
			        android:textSize="18sp" />
		    </LinearLayout>
	        <EditText
	            android:id="@+id/profilNameEdit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	             />
	         <Button
		        android:id="@+id/editProfilSave" 
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Save"/>
		</LinearLayout>
    </RelativeLayout>
    "
</ScrollView>
